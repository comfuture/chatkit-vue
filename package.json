{
  "name": "chatkit-vue",
  "version": "0.1.3",
  "type": "module",
  "description": "Unofficial Vue 3 bindings for OpenAI ChatKit with Tailwind-styled UI components.",
  "author": "",
  "license": "MIT",
  "main": "dist/chatkit-vue.umd.cjs",
  "module": "dist/chatkit-vue.es.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist",
    "nuxt"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/chatkit-vue.es.js",
      "require": "./dist/chatkit-vue.umd.cjs"
    },
    "./styles.css": "./dist/styles.css",
    "./nuxt": {
      "types": "./dist/nuxt/index.d.ts",
      "import": "./dist/nuxt/index.mjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "rimraf dist && vue-tsc --declaration --emitDeclarationOnly --declarationDir dist/types && vite build && npm run build:styles && npm run build:nuxt",
    "build:types": "vue-tsc --project tsconfig.build.json",
    "build:styles": "tailwindcss -i ./src/styles/tailwind.css -o ./dist/styles.css --minify",
    "typecheck": "vue-tsc --noEmit",
    "test": "vitest",
    "build:nuxt": "unbuild"
  },
  "peerDependencies": {
    "@openai/chatkit": "^1.0.0",
    "vue": "^3.4.0",
    "nuxt": "^3.0.0 || ^4.0.0"
  },
  "peerDependenciesMeta": {
    "nuxt": {
      "optional": true
    }
  },
  "devDependencies": {
    "@headlessui/vue": "^1.7.20",
    "@openai/chatkit": "^1.0.0",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^20.12.7",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/test-utils": "^2.4.5",
    "autoprefixer": "^10.4.18",
    "clsx": "^2.1.1",
    "markdown-it": "^14.1.0",
    "postcss": "^8.4.38",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5",
    "unbuild": "^2.0.0",
    "vite": "^5.2.9",
    "vitest": "^1.6.0",
    "vue": "^3.4.21",
    "vue-tsc": "^2.0.7"
  }
}
