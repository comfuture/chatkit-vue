{
  "name": "chatkit-vue",
  "version": "0.1.6",
  "type": "module",
  "description": "Unofficial Vue 3 bindings for OpenAI ChatKit with Tailwind-styled UI components.",
  "author": "",
  "license": "MIT",
  "main": "dist/chatkit-vue.umd.cjs",
  "module": "dist/chatkit-vue.es.js",
  "types": "dist/types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/comfuture/chatkit-vue.git"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/chatkit-vue.es.js",
      "require": "./dist/chatkit-vue.umd.cjs"
    },
    "./styles.css": "./dist/styles.css",
    "./nuxt": {
      "types": "./dist/nuxt/index.d.ts",
      "import": "./dist/nuxt/index.mjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "rimraf dist && vite build && npm run build:styles && npm run build:nuxt && npm run build:types",
    "build:types": "vue-tsc --project tsconfig.build.json",
    "build:styles": "tailwindcss -i ./src/styles/tailwind.css -o ./dist/styles.css --minify",
    "typecheck": "vue-tsc --noEmit",
    "test": "vitest",
    "build:nuxt": "unbuild"
  },
  "peerDependencies": {
    "@openai/chatkit": "^1.0.0",
    "nuxt": "^3.0.0 || ^4.0.0",
    "vue": "^3.4.0"
  },
  "peerDependenciesMeta": {
    "nuxt": {
      "optional": true
    }
  },
  "devDependencies": {
    "@headlessui/vue": "^1.7.23",
    "@openai/chatkit": "^1.1.0",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^25.0.0",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.22",
    "clsx": "^2.1.1",
    "markdown-it": "^14.1.0",
    "postcss": "^8.5.6",
    "rimraf": "^6.1.2",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1",
    "vite": "^7.2.7",
    "vitest": "^4.0.15",
    "vue": "^3.5.25",
    "vue-tsc": "^3.1.8"
  }
}
